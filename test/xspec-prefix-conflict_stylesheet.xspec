<?xml version="1.0" encoding="UTF-8"?>
<t:description stylesheet="xspec-prefix-conflict.xsl"
	xmlns:t="http://www.jenitennison.com/xslt/xspec" xmlns:x="x-urn:test:xspec-prefix-conflict">

	<t:scenario label="Using x: prefix in">
		<t:scenario label="context @mode, template-param @name, @select and child node">
			<t:context mode="x:param-mirror-mode">
				<t:param name="x:param-items" select="element(x:template-param-child)">
					<x:template-param-child />
				</t:param>
				<x:context-child />
			</t:context>
			<t:expect label="should work" select="'x:template-param-child'" test="name($t:result)"
			 />
		</t:scenario>

		<t:scenario label="context child node">
			<t:context>
				<x:context-child />
			</t:context>
			<t:call template="x:context-mirror-template" />
			<t:expect label="should work" select="'x:context-child'" test="name($t:result)" />
		</t:scenario>

		<t:scenario label="template-call @template, template-param @name, @select and child node">
			<t:call template="x:param-mirror-template">
				<t:param name="x:param-items" select="element(x:template-param-child)">
					<x:template-param-child />
				</t:param>
			</t:call>
			<t:expect label="should work" select="'x:template-param-child'" test="name($t:result)"
			 />
		</t:scenario>
	</t:scenario>

</t:description>
