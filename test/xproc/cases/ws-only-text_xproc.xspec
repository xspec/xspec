	<x:scenario label="In user-content,">
		<x:scenario>
			<x:label>@xml:space="preserve" takes effect on descendant whitespace-only text node.
				So...</x:label>
			<x:call step="mirror:identity">
				<x:input port="source">
					<p xml:space="preserve">&#x09;&#x0A;&#x0D;&#x20;<span>&#x09;&#x0A;&#x0D;&#x20;</span></p>
				</x:input>
			</x:call>
			<x:expect port="xproc-result" label="Child whitespace-only text nodes are kept."
				test="deep-equal($x:result/child::p/(node() except span), $ws-only-text:wsot/node())" />
			<x:expect port="xproc-result" label="Grandchild whitespace-only text nodes are kept."
				test="deep-equal($x:result/child::p/span, $ws-only-text:span-element-wsot/span)" />
		</x:scenario>

		<x:scenario>
			<x:label>@xml:space="preserve" takes effect on whitespace-only text node even when the
				text node appears immediately in user-content. (i.e. no parent element)
				So...</x:label>
			<x:call step="mirror:identity">
				<x:input port="source" xml:space="preserve">&#x09;&#x0A;&#x0D;&#x20;</x:input>
			</x:call>
			<x:expect port="xproc-result" label="Immediate whitespace-only text nodes are kept."
				test="deep-equal($x:result, $ws-only-text:wsot)" />
		</x:scenario>

		<x:scenario>
			<x:label>For elements specified by @preserve-space, effect is only on child
				whitespace-only text node. So...</x:label>
			<x:call step="mirror:identity">
				<x:input port="source">
					<pre>&#x09;&#x0A;&#x0D;&#x20;<span>&#x09;&#x0A;&#x0D;&#x20;</span></pre>
				</x:input>
			</x:call>
			<x:expect port="xproc-result"
				test="deep-equal($x:result/child::pre/node(), ($ws-only-text:wsot/node(), $ws-only-text:span-element-empty/node()))">
				<x:label>Child whitespace-only text nodes are kept, whereas grandchild
					whitespace-only text nodes are removed.</x:label>
			</x:expect>
		</x:scenario>

		<x:scenario>
			<x:label>x:text can be used side by side with other nodes. So...</x:label>
			<x:call step="mirror:identity">
				<x:input port="source">
					<p>
						<x:text>&#x09;&#x0A;&#x0D;&#x20;</x:text>
						<span>&#x09;&#x0A;&#x0D;&#x20;</span>
					</p>
				</x:input>
			</x:call>
			<x:expect port="xproc-result"
				test="deep-equal($x:result/child::p/node(), ($ws-only-text:wsot/node(), $ws-only-text:span-element-empty/node()))">
				<x:label>Whitespace-only text nodes created by x:text are kept, whereas those in
					sibling nodes are removed.</x:label>
			</x:expect>
		</x:scenario>
	</x:scenario>

