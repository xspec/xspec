<x:description preserve-space="pre" xproc="library-mirror.xpl"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mirror="x-urn:test:mirror"
	xmlns:myv="http://example.org/ns/my/variable" xmlns:p="http://www.w3.org/ns/xproc"
	xmlns:ws-only-text="x-urn:test:ws-only-text" xmlns:x="http://www.jenitennison.com/xslt/xspec">

	<x:helper stylesheet="ws-only-text.xsl" />

	<x:scenario
		label="In x:input, whitespace-only text nodes in user-content are removed by default.">
		<x:scenario>
			<x:label>So, in
				//x:call[@step]/x:input/element()[not(ancestor-or-self::element()/@xml:space)],</x:label>
			<x:call step="mirror:identity">
				<x:input port="source">
					<span>&#x09;&#x0A;&#x0D;&#x20;</span>
				</x:input>
			</x:call>
			<x:expect port="xproc-result" label="whitespace-only text nodes are removed."
				test="deep-equal($x:result, $ws-only-text:span-element-empty)" />
		</x:scenario>

		<x:scenario label="But...">
			<x:scenario>
				<x:label>@xml:space overrides the default. So, in
					//x:call[@step]/x:input/element()[ancestor-or-self::element()[@xml:space][1]/@xml:space
					= "preserve"],</x:label>
				<x:call step="mirror:identity">
					<x:input port="source" xml:space="preserve"><span>&#x09;&#x0A;&#x0D;&#x20;</span></x:input>
				</x:call>
				<x:expect port="xproc-result" label="whitespace-only text nodes are kept."
					test="deep-equal($x:result, $ws-only-text:span-element-wsot)" />
			</x:scenario>

			<x:scenario>
				<x:label>node-selection @href is always intact. So, in
					//x:call[@step]/x:input/@href[not(ancestor::element()/@xml:space)]/doc(.)[not(descendant::element()/@xml:space)],</x:label>
				<x:call step="mirror:identity">
					<x:input port="source" href="ws-only-text.xml" />
				</x:call>
				<x:expect port="xproc-result" label="whitespace-only text nodes are kept."
					test="deep-equal($x:result/node(), $ws-only-text:span-element-wsot/node())" />
			</x:scenario>

			<x:scenario>
				<!-- XProc-specific -->
				<x:label>When x:input/p:document[@href] causes XML document to be loaded by
					XProc processor instead of XSLT processor,</x:label>
				<x:call step="mirror:identity">
					<x:input port="source">
						<p:document href="ws-only-text.xml" />
					</x:input>
				</x:call>
				<x:expect port="xproc-result"
					label="whitespace-only text nodes are kept (as in XSLT processor case)."
					test="deep-equal($x:result/node(), $ws-only-text:span-element-wsot/node())" />            	
			</x:scenario>

			<x:scenario>
				<!-- XProc-specific -->
				<x:label>When x:input/p:document[@href] causes HTML document to be loaded by
					XProc processor instead of XSLT processor,</x:label>
				<x:call step="mirror:identity">
					<x:input port="source">
						<p:document href="ws-only-text.html" />
					</x:input>
				</x:call>
				<x:expect port="xproc-result"
					label="whitespace-only text nodes are kept."
					test="deep-equal(
					$x:result//html:span/node(),
					$ws-only-text:span-element-wsot/span/node()
					)" />
			</x:scenario>

			<x:scenario>
				<x:label>Elements specified by @preserve-space are intact. So, in
					//x:call[@step]/x:input/element()[not(ancestor-or-self::element()/@xml:space)][node-name(.)
					= (for $qname in tokenize(/x:description/@preserve-space, '\s+') return
					resolve-QName($qname, /x:description))],</x:label>
				<x:call step="mirror:identity">
					<x:input port="source">
						<pre>&#x09;&#x0A;&#x0D;&#x20;</pre>
					</x:input>
				</x:call>
				<x:expect port="xproc-result" label="whitespace-only text nodes are kept."
					test="deep-equal($x:result, $ws-only-text:pre-element-wsot)" />
			</x:scenario>

			<x:scenario>
				<x:label>Text nodes created by x:text are intact. So, in
					//x:call[@step]/x:input/x:text[not(ancestor-or-self::element()/@xml:space)],</x:label>
				<x:call step="mirror:identity">
					<x:input port="source">
						<x:text>&#x09;&#x0A;&#x0D;&#x20;</x:text>
					</x:input>
				</x:call>
				<x:expect port="xproc-result" label="whitespace-only text nodes are kept."
					test="deep-equal($x:result, $ws-only-text:wsot)" />
			</x:scenario>
		</x:scenario>
	</x:scenario>

