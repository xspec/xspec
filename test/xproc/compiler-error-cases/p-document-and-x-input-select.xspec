<?xml version="1.0" encoding="UTF-8"?>
<?xspec-test message=ERROR in x:input (named source): p:document cannot combine with other elements, @href, @select, @as, or significant text nodes.?>
<x:description xmlns:p="http://www.w3.org/ns/xproc" xmlns:s="x-urn:test:xproc:steplibrary"
    xmlns:x="http://www.jenitennison.com/xslt/xspec" xproc="../cases/library.xpl">

    <x:scenario label="In x:input[p:document], @select">
        <x:call step="s:one-input-no-option-one-output">
            <x:input port="source" select="/">
                <p:document href="uri"/>
            </x:input>
        </x:call>
        <x:expect label="should raise an error" as="item()*"/>
    </x:scenario>
</x:description>
