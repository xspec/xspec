<?xml version="1.0" encoding="UTF-8"?>
<x:description stylesheet="template-context.xsl" xmlns:x="http://www.jenitennison.com/xslt/xspec">

	<x:scenario label="Template context">
		<x:context select="//context-grandchild">
			<context-child>
				<context-grandchild />
			</context-child>
		</x:context>

		<x:scenario label="apply-templates invocation">
			<x:context mode="get-template-context" />
			<x:expect label="x:context/@select"
				select="$x:context treat as element(context-grandchild)" />
		</x:scenario>

		<x:scenario label="call-template invocation">
			<x:call template="get-template-context" />
			<x:expect label="x:context/@select"
				select="$x:context treat as element(context-grandchild)" />
		</x:scenario>
	</x:scenario>

</x:description>
