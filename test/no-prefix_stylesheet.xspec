<?xml version="1.0" encoding="UTF-8"?>
<?xspec-test require-saxon-bug-3889-fixed?>
<!-- Copy of use-uri-qualified-name_stylesheet.xspec with x: prefix removed -->
<description stylesheet="use-uri-qualified-name.xsl" xmlns="http://www.jenitennison.com/xslt/xspec"
	xmlns:myv="http://example.org/ns/my/variable" xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- Leading and trailing &#x09;&#x0A;&#x0D;&#x20; inserted to names deliberately -->

	<scenario label="Using URIQualifiedName in">
		<scenario label="context @mode and template-param @name">
			<context
				mode="
					&#x09;&#x0A;&#x0D;&#x20;
					Q{x-urn:test:use-uri-qualified-name}param-mirror-mode
					&#x09;&#x0A;&#x0D;&#x20;">
				<param
					name="
						&#x09;&#x0A;&#x0D;&#x20;
						Q{x-urn:test:use-uri-qualified-name}param-items
						&#x09;&#x0A;&#x0D;&#x20;">
					<template-param-child xmlns="" />
				</param>
				<context-child xmlns="" />
			</context>
			<expect label="should be possible">
				<template-param-child xmlns="" />
			</expect>
		</scenario>

		<scenario label="context @select and template-param @select">
			<variable as="element(context-child)" name="myv:context" select="/Q{}context-child">
				<context-child xmlns="" />
			</variable>
			<variable as="element(variable-child)" name="myv:var" select="/Q{}variable-child">
				<variable-child xmlns="" />
			</variable>
			<context mode="Q{x-urn:test:use-uri-qualified-name}param-mirror-mode"
				select="$Q{http://example.org/ns/my/variable}context">
				<param name="Q{x-urn:test:use-uri-qualified-name}param-items"
					select="$Q{http://example.org/ns/my/variable}var" />
			</context>
			<expect label="should be possible">
				<variable-child xmlns="" />
			</expect>
		</scenario>

		<scenario label="template-call @template and template-param @name">
			<call
				template="
					&#x09;&#x0A;&#x0D;&#x20;
					Q{x-urn:test:use-uri-qualified-name}param-mirror-template
					&#x09;&#x0A;&#x0D;&#x20;">
				<param
					name="
						&#x09;&#x0A;&#x0D;&#x20;
						Q{x-urn:test:use-uri-qualified-name}param-items
						&#x09;&#x0A;&#x0D;&#x20;">
					<template-param-child xmlns="" />
				</param>
			</call>
			<expect label="should be possible">
				<template-param-child xmlns="" />
			</expect>
		</scenario>

		<scenario label="template-param @as">
			<call template="Q{x-urn:test:use-uri-qualified-name}param-mirror-template">
				<param
					as="
						&#x09;&#x0A;&#x0D;&#x20;
						Q{http://www.w3.org/2001/XMLSchema}string
						&#x09;&#x0A;&#x0D;&#x20;"
					name="Q{x-urn:test:use-uri-qualified-name}param-items" select="'xyz'" />
			</call>
			<expect label="should be possible"
				select="$Q{http://www.jenitennison.com/xslt/xspec}result treat as xs:string"
				test="$Q{http://www.jenitennison.com/xslt/xspec}result treat as xs:string" />
		</scenario>

	</scenario>

</description>
