		</x:scenario>

		<x:scenario label="impl">
			<x:call>
				<x:param select="'impl:my-local-name'" />
			</x:call>
			<x:expect label="Constructed" select="string()"
				>Q{urn:x-xspec:compile:impl}my-local-name</x:expect>
		</x:scenario>

		<x:scenario label="map">
			<x:call>
				<x:param select="'map:my-local-name'" />
			</x:call>
			<x:expect label="Constructed" select="string()"
