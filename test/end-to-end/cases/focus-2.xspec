<t:description xmlns:t="http://www.jenitennison.com/xslt/xspec"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
               query="x-urn:test:do-nothing"
               query-at="do-nothing.xqm"
               schematron="do-nothing.sch"
               stylesheet="do-nothing.xsl"
               xml:base="../../">

   <t:scenario label="Test @focus and pending together (both @pending and t:pending)">

      <!--
          Test x:pending.
      -->
      <t:pending label="testing x:pending">

         <t:scenario label="an unfocused Success scenario in x:pending must be Pending">
            <t:call function="exactly-one">
               <t:param select="9" />
            </t:call>
            <t:expect label="it would return Success if it were not Pending" select="9"/>
         </t:scenario>

         <t:scenario label="a focused Success scenario in x:pending" focus="testing @focus in x:pending">
            <t:call function="exactly-one">
               <t:param select="9" />
            </t:call>
            <t:expect label="must execute the test and return Success" select="9"/>
         </t:scenario>

      </t:pending>

      <!--
          Test @pending.
      -->
      <t:scenario label="a Success scenario with @pending must be Pending"
                  pending="testing @pending without @focus">
         <t:call function="exactly-one">
            <t:param select="9" />
         </t:call>
         <t:expect label="it would return Success if it were not Pending" select="9"/>
      </t:scenario>

      <!-- does not make sense, really, but to see how the implem reacts -->
      <t:scenario label="a Success scenario with both @pending and @focus (not recommended as ambiguous)"
                  pending="testing @pending with @focus"
                  focus="testing @focus with @pending">
         <t:call function="exactly-one">
            <t:param select="9" />
         </t:call>
         <t:expect label="must execute the test and return Success" select="9"/>
      </t:scenario>

      <!--
          Non-pending scenarios.
      -->
      <t:scenario label="a non-pending Success scenario alongside a focused scenario must be Pending">
         <t:call function="exactly-one">
            <t:param select="9" />
         </t:call>
         <t:expect label="it would return Success if it were not Pending" select="9"/>
      </t:scenario>

      <t:scenario label="a focused Success scenario alongside another focused scenario" focus="testing @focus alongside another focused scenario">
         <t:call function="exactly-one">
            <t:param select="9" />
         </t:call>
         <t:expect label="must execute the test and return Success" select="9"/>
      </t:scenario>

   </t:scenario>

</t:description>


