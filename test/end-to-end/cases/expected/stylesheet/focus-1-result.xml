<?xml version="1.0" encoding="UTF-8"?>
<report xmlns="http://www.jenitennison.com/xslt/xspec"
        xspec="../../focus-1.xspec"
        stylesheet="../../../../do-nothing.xsl"
        date="2000-01-01T00:00:00Z">
   <scenario id="scenario1"
             xspec="../../focus-1.xspec"
             pending="testing @focus of a Success scenario">
      <label>an unfocused Success scenario must be Pending</label>
      <input-wrap xmlns="">
         <t:call xmlns:xs="http://www.w3.org/2001/XMLSchema"
                 xmlns:t="http://www.jenitennison.com/xslt/xspec"
                 function="exactly-one">
            <t:param select="9"/>
         </t:call>
      </input-wrap>
      <test id="scenario1-expect1" pending="testing @focus of a Success scenario">
         <label>it would return Success if it were not Pending</label>
      </test>
   </scenario>
   <scenario id="scenario2"
             xspec="../../focus-1.xspec"
             pending="testing @focus of a Success scenario">
      <label>an unfocused Failure scenario must be Pending</label>
      <input-wrap xmlns="">
         <t:call xmlns:xs="http://www.w3.org/2001/XMLSchema"
                 xmlns:t="http://www.jenitennison.com/xslt/xspec"
                 function="exactly-one">
            <t:param select="4"/>
         </t:call>
      </input-wrap>
      <test id="scenario2-expect1" pending="testing @focus of a Success scenario">
         <label>it would return Failure if it were not Pending</label>
      </test>
   </scenario>
   <scenario id="scenario3" xspec="../../focus-1.xspec">
      <label>a focused Success scenario</label>
      <input-wrap xmlns="">
         <t:call xmlns:xs="http://www.w3.org/2001/XMLSchema"
                 xmlns:t="http://www.jenitennison.com/xslt/xspec"
                 function="exactly-one">
            <t:param select="9"/>
         </t:call>
      </input-wrap>
      <result select="9"/>
      <test id="scenario3-expect1" successful="true">
         <label>must execute the test and return Success</label>
         <expect select="9"/>
      </test>
   </scenario>
   <scenario id="scenario4" xspec="../../focus-1.xspec">
      <label>a focused Failure scenario</label>
      <input-wrap xmlns="">
         <t:call xmlns:xs="http://www.w3.org/2001/XMLSchema"
                 xmlns:t="http://www.jenitennison.com/xslt/xspec"
                 function="exactly-one">
            <t:param select="4"/>
         </t:call>
      </input-wrap>
      <result select="4"/>
      <test id="scenario4-expect1" successful="false">
         <label>must execute the test and return Failure</label>
         <expect-test-wrap xmlns="">
            <t:expect xmlns:xs="http://www.w3.org/2001/XMLSchema"
                      xmlns:t="http://www.jenitennison.com/xslt/xspec"
                      test="$t:result instance of xs:string"/>
         </expect-test-wrap>
         <expect select="()"/>
      </test>
   </scenario>
</report>
