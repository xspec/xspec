<?xml version="1.0" encoding="UTF-8"?>
<t:report xmlns:t="http://www.jenitennison.com/xslt/xspec"
          date="ONCE-UPON-A-TIME"
          query="http://example.org/ns/my"
          query-at="../../../../xspec-tested.xql"
          xspec="../../xspec-function.xspec">
   <t:scenario>
      <t:label>when calling a function and expecting correctly</t:label>
      <t:call xmlns:my="http://example.org/ns/my" function="my:square">
         <t:param select="3"/>
      </t:call>
      <t:result select="9"/>
      <t:test successful="true">
         <t:label>expecting the correct value must return Success</t:label>
         <t:expect select="9"/>
      </t:test>
      <t:test successful="true">
         <t:label>expecting the correct type must return Success</t:label>
         <t:expect select="()"/>
      </t:test>
   </t:scenario>
   <t:scenario>
      <t:label>when calling a function and expecting incorrectly</t:label>
      <t:call xmlns:my="http://example.org/ns/my" function="my:square">
         <t:param select="2"/>
      </t:call>
      <t:result select="4"/>
      <t:test successful="false">
         <t:label>expecting an incorrect value must return Failure</t:label>
         <t:expect select="42"/>
      </t:test>
      <t:test successful="false">
         <t:label>expecting an incorrect type must return Failure</t:label>
         <t:expect select="()"/>
      </t:test>
   </t:scenario>
</t:report>
