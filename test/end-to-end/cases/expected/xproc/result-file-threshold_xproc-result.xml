<?xml version="1.0" encoding="UTF-8"?>
<report xmlns="http://www.jenitennison.com/xslt/xspec"
        xspec="../../result-file-threshold_xproc.xspec"
        xproc="../../../../xproc/cases/library-mirror.xpl"
        date="2000-01-01T00:00:00Z">
   <scenario id="scenario1" xspec="../../result-file-threshold_xproc.xspec">
      <label>Test how the actual result and the expected result are saved</label>
      <input-wrap xmlns="">
         <x:call xmlns:mirror="x-urn:test:mirror"
                 xmlns:x="http://www.jenitennison.com/xslt/xspec"
                 step="mirror:identity">
            <x:input port="source">
               <actual-result/>
            </x:input>
         </x:call>
      </input-wrap>
      <result select="/*">
         <content-wrap xmlns="">
            <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{"ports":map{"xproc-result":map{"document-properties":map{Q{}base-uri:"result-file-threshold_xproc-compiled.xsl",Q{}content-type:"application/xml"},"document":&lt;actual-result xmlns:mirror="x-urn:test:mirror"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"/&gt;
}}}</pseudo-map>
         </content-wrap>
      </result>
      <test id="scenario1-expect1" successful="false">
         <label>when the actual result is evaluated without @test</label>
         <port-specific>
            <result select="/*">
               <content-wrap xmlns="">
                  <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{"ports":map{"xproc-result":map{"document-properties":map{Q{}base-uri:"result-file-threshold_xproc-compiled.xsl",Q{}content-type:"application/xml"},"document":&lt;actual-result xmlns:mirror="x-urn:test:mirror"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"/&gt;
}}}</pseudo-map>
               </content-wrap>
            </result>
         </port-specific>
         <expect select="/element()">
            <content-wrap xmlns="">
               <expected-result xmlns:mirror="x-urn:test:mirror"
                                xmlns:x="http://www.jenitennison.com/xslt/xspec"/>
            </content-wrap>
         </expect>
      </test>
      <test id="scenario1-expect2" successful="false">
         <label>when the actual result is evaluated with @test</label>
         <expect-test-wrap xmlns="">
            <x:expect xmlns:mirror="x-urn:test:mirror"
                      xmlns:x="http://www.jenitennison.com/xslt/xspec"
                      test="$x:result"/>
         </expect-test-wrap>
         <result select="/*">
            <content-wrap xmlns="">
               <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{"ports":map{"xproc-result":map{"document-properties":map{Q{}base-uri:"result-file-threshold_xproc-compiled.xsl",Q{}content-type:"application/xml"},"document":&lt;actual-result xmlns:mirror="x-urn:test:mirror"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"/&gt;
}}}</pseudo-map>
            </content-wrap>
         </result>
         <expect select="/element()">
            <content-wrap xmlns="">
               <expected-result xmlns:mirror="x-urn:test:mirror"
                                xmlns:x="http://www.jenitennison.com/xslt/xspec"/>
            </content-wrap>
         </expect>
      </test>
      <test id="scenario1-expect3" successful="false">
         <label>when the expected result is an empty sequence</label>
         <port-specific>
            <result select="/*">
               <content-wrap xmlns="">
                  <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{"ports":map{"xproc-result":map{"document-properties":map{Q{}base-uri:"result-file-threshold_xproc-compiled.xsl",Q{}content-type:"application/xml"},"document":&lt;actual-result xmlns:mirror="x-urn:test:mirror"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"/&gt;
}}}</pseudo-map>
               </content-wrap>
            </result>
         </port-specific>
         <expect select="()"/>
      </test>
      <test id="scenario1-expect4" successful="false">
         <label>when the expected result is an atomic value</label>
         <port-specific>
            <result select="/*">
               <content-wrap xmlns="">
                  <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{"ports":map{"xproc-result":map{"document-properties":map{Q{}base-uri:"result-file-threshold_xproc-compiled.xsl",Q{}content-type:"application/xml"},"document":&lt;actual-result xmlns:mirror="x-urn:test:mirror"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"/&gt;
}}}</pseudo-map>
               </content-wrap>
            </result>
         </port-specific>
         <expect select="0"/>
      </test>
      <test id="scenario1-expect5" successful="false">
         <label>when the expected result is a map</label>
         <port-specific>
            <result select="/*">
               <content-wrap xmlns="">
                  <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{"ports":map{"xproc-result":map{"document-properties":map{Q{}base-uri:"result-file-threshold_xproc-compiled.xsl",Q{}content-type:"application/xml"},"document":&lt;actual-result xmlns:mirror="x-urn:test:mirror"
               xmlns:x="http://www.jenitennison.com/xslt/xspec"/&gt;
}}}</pseudo-map>
               </content-wrap>
            </result>
         </port-specific>
         <expect select="/*">
            <content-wrap xmlns="">
               <pseudo-map xmlns="http://www.jenitennison.com/xslt/xspec">map{}</pseudo-map>
            </content-wrap>
         </expect>
      </test>
   </scenario>
</report>
