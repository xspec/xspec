			</x:scenario>

			<x:scenario label="@expand-text=yes on x:context">
				<x:context expand-text="yes" mode="mirror:context-mirror"
						>}}{myfn:false()}{{<context-child>}}{myfn:false()}{{</context-child></x:context>
				<x:like label="user-content expect (indirect)" />
			</x:scenario>
