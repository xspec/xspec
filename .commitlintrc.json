{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "style",
        "test"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "xslt",
        "xquery",
        "schematron",
        "oxygen",
        "basex",
        "deps",
        "report",
        "xproc",
        "schema"
      ]
    ]
  }
}
